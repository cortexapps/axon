{
  "private": [
    {
      "method": "any",
      "path": "/*",
      "origin": "${GITHUB:github.com}",
      "auth": {
        "scheme": "basic",
        "username": "github",
        "password": "${GITHUB_TOKEN}"
      },
      "valid": [
        {
          "header": "x-cortex-service",
          "values": [
            "scaffolder"
          ]
        }
      ]
    },
    {
      "method": "any",
      "path": "/*",
      "origin": "${GITHUB_API}",
      "auth": {
        "scheme": "bearer",
        "token": "${GITHUB_TOKEN}"
      }
    },
    {
      "method": "POST",
      "path": "/graphql",
      "origin": "${GITHUB_GRAPHQL}",
      "auth": {
        "scheme": "bearer",
        "token": "${GITHUB_TOKEN}"
      }
    }
  ]
}
