{
  "$vars": [
    "${GITHUB_APP_CLIENT_ID}",
    "${GITHUB_APP_CLIENT_PEM}",
    "${GITHUB_INSTALLATION_ID}"
  ],
  "private": [
    {
      "method": "any",
      "path": "/*",
      "origin": "${GITHUB:github.com}",
      "auth": {
        "scheme": "basic",
        "username": "github",
        "password": "${GITHUB_TOKEN:please_set_GITHUB_TOKEN}"
      },
      "valid": [
        {
          "header": "x-cortex-service",
          "values": [
            "scaffolder"
          ]
        }
      ]
    },
    {
      "method": "any",
      "path": "/*",
      "origin": "${GITHUB_API}",
      "headers": {
        "X-GitHub-Api-Version": "2022-11-28",
        "Authorization": "Bearer ${plugin:github-app-token}"
      }
    },
    {
      "method": "POST",
      "path": "/graphql",
      "origin": "${GITHUB_GRAPHQL}",
      "headers": {
        "X-GitHub-Api-Version": "2022-11-28",
        "Authorization": "Bearer ${plugin:github-app-token}"
      }
    }
  ]
}
